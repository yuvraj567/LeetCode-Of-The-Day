class Solution {
public:
    char findKthBit(int n, int k) {
        string res = "0";
        for (int i = 2; i <= n; i++) {
            string invert = "";
            for (int i = res.size() - 1; i >= 0; i--) {
                invert += (res[i] == '1' ? '0' : '1');
            }
            res = res + '1' + invert;
        }
        return res[k - 1];
    }
};
